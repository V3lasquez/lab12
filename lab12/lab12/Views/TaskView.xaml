<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab12.Views.TaskView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title" FontSize="Title" />
            <Entry FontSize="Title" Text="{Binding Title}"/>

            <Label Text="Descripcion" FontSize="Title" />
            <Entry FontSize="Title" Text="{Binding Descripcion}"/>

            <Button Text="Guardar" Command="{Binding Guardar}" BackgroundColor="white" />
            <Button Text="Listar" Command="{Binding Listar}" BackgroundColor="white" />
            <ListView ItemsSource="{Binding Tasks}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Title}"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>